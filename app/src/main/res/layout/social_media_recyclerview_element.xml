<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/social_media_fl_for_all_info"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/recycler_view_elem_padding">

    <!--Need round icon!!!!!!!!-->
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/social_media_iv_for_social_picture"
        android:layout_width="@dimen/social_media_picture_max_width"
        android:layout_height="@dimen/social_media_picture_max_height"
        android:layout_marginBottom="@dimen/recycler_view_elem_margin_bottom_for_line"
        app:civ_border_width="4dp"
        app:civ_border_color="#FF000000"/>

    <!--<ImageView
        android:id="@+id/social_media_iv_for_social_picture"
        android:layout_width="@dimen/social_media_picture_max_width"
        android:layout_height="@dimen/social_media_picture_max_height"
        android:layout_marginBottom="@dimen/recycler_view_elem_margin_bottom_for_line"
        android:src="@drawable/vk_social_icon"/>-->

    <LinearLayout
        android:id="@+id/social_media_ll_for_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/social_media_tv_for_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/social_media_name_text_size"
            android:text="Social network name"
            android:layout_gravity="center_horizontal|start"
            android:textAlignment="center"
            android:textColor="@color/black95"
            />
        <TextView
            android:id="@+id/social_media_tv_for_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/social_media_user_name_text_size"
            android:text="Social media user name"
            android:textAlignment="textStart"
            android:textColor="@color/black95"/>
    </LinearLayout>

</FrameLayout>