<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.donteco.alarmClock.activities.AlarmClockPlayerActivity"
    android:background="@color/blue_for_switch">

    <ImageView
        android:id="@+id/alarm_clock_player_iv"
        android:layout_width="@dimen/alarm_clock_player_iv_max_width"
        android:layout_height="@dimen/alarm_clock_player_iv_max_height"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        android:src = "@drawable/alarm_clock_for_social_sharing"
        />

    <in.shadowfax.proswipebutton.ProSwipeButton
        android:id="@+id/alarm_clock_player_swipe_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alarm_clock_palyer_swipe_margin_top"
        android:layout_below="@+id/alarm_clock_player_iv"
        app:bg_color="@color/blue_for_switch"
        app:btn_text="@string/alarm_clock_player_swipe"
        app:text_size="20sp"
        app:arrow_color="#33FFFFFF" />

</RelativeLayout>
